---
import {
  Image,
  Monitor,
  Settings,
  Search,
  HelpCircle,
  Play,
  Power,
} from "lucide-astro";

interface Props {
  icon:
    | "pictures"
    | "computer"
    | "control"
    | "search"
    | "help"
    | "run"
    | "shutdown";
  label: string;
  isRed?: boolean;
}

const { icon, label, isRed = false } = Astro.props;

const iconMap = {
  pictures: Image,
  computer: Monitor,
  control: Settings,
  search: Search,
  help: HelpCircle,
  run: Play,
  shutdown: Power,
};

const Icon = iconMap[icon];
---

<li
  class={`flex items-center gap-2 px-2 py-1 rounded hover:bg-blue-100 cursor-pointer ${isRed ? "text-red-600 font-semibold border-t border-gray-200 mt-2" : ""}`}
>
  <span class="w-5 h-5 flex items-center justify-center text-[#245edc]">
    <Icon class="w-5 h-5" />
  </span>
  <span>{label}</span>
</li>

---
import SocialLink from "./SocialLink.astro";
---

<div
  id="xp-start-menu"
  tabindex="-1"
  class="hidden-remove fixed bottom-10 left-0 w-[450px] bg-[#eaf6ff] border border-[#245edc] rounded-t-xl rounded-br-xl shadow-2xl z-50 flex-col overflow-hidden font-sans animate-fade"
  style="box-shadow: 0 8px 32px 0 rgba(0,0,0,0.25);"
>
  <!-- User/Profile Section -->
  <div
    class="flex items-center gap-3 bg-gradient-to-r from-[#245edc] to-[#4ea3f7] text-white font-bold px-4 py-3"
  >
    <img
      src="/Case-Studies-Automata/xp-icon/user_icon.webp"
      alt="User"
      class="w-10 h-10 rounded-sm border-2 border-slate-100 shadow-xl"
    />
    <span class="font-medium">Heron Student</span>
  </div>
  <!-- Main Content: Two Columns -->
  <div class="flex-1 flex bg-white">
    <!-- Left: Programs -->
    <div
      class="w-6/12 py-2 px-1 bg-gradient-to-b from-[#f8fafc] to-[#eaf6ff] border-r-2 border-blue-900/25"
    >
      <ul class="space-y-1">
        <li
          class="flex items-center gap-2 px-2 py-1 rounded hover:bg-blue-100 cursor-pointer"
        >
          <button
            type="button"
            onclick="window.dispatchEvent(new CustomEvent('open-window', { detail: 'fibonacci' }))"
            class="flex items-center gap-2 w-full h-full text-left"
          >
            <img
              src="/Case-Studies-Automata/xp-icon/page-nacci.ico"
              class="w-5 h-5"
              alt="Paint"
            />
            <span>Fibonacci Sequence Generator</span>
            <span class="ml-auto text-[#388e3c] font-bold">&gt;</span>
          </button>
        </li>
        <li
          class="flex items-center gap-2 px-2 py-1 rounded hover:bg-blue-100 cursor-pointer"
        >
          <button
            type="button"
            onclick="window.dispatchEvent(new CustomEvent('open-window', { detail: 'tribonacci' }))"
            class="flex items-center gap-2 w-full h-full text-left"
          >
            <img
              src="/Case-Studies-Automata/xp-icon/page-nacci.ico"
              class="w-5 h-5"
              alt="Paint 3D"
            />
            <span>Tribonacci Sequence Generator</span>
            <span class="ml-auto text-[#388e3c] font-bold">&gt;</span>
          </button>
        </li>
        <li class="border-t w-9/12 mx-auto border-blue-800/60 my-1"></li>
        <li
          class="flex items-center gap-2 px-2 py-1 rounded hover:bg-blue-100 cursor-pointer"
        >
          <button
            type="button"
            onclick="window.dispatchEvent(new CustomEvent('open-window', { detail: 'euclidean' }))"
            class="flex items-center gap-2 w-full h-full text-left"
          >
            <img
              src="/Case-Studies-Automata/xp-icon/page-euclidean.ico"
              class="w-5 h-5"
              alt="Notepad"
            />
            <span>Euclidean Algorithm</span>
            <span class="ml-auto text-[#388e3c] font-bold">&gt;</span>
          </button>
        </li>
        <li
          class="flex items-center gap-2 px-2 py-1 rounded hover:bg-blue-100 cursor-pointer"
        >
          <button
            type="button"
            onclick="window.dispatchEvent(new CustomEvent('open-window', { detail: 'lucas' }))"
            class="flex items-center gap-2 w-full h-full text-left"
          >
            <img
              src="/Case-Studies-Automata/xp-icon/page-lucas.ico"
              class="w-5 h-5"
              alt="Word"
            />
            <span>Lucas Number Generator</span>
            <span class="ml-auto text-[#388e3c] font-bold">&gt;</span>
          </button>
        </li>
        <li
          class="flex items-center gap-2 px-2 py-1 rounded hover:bg-blue-100 cursor-pointer"
        >
          <button
            type="button"
            onclick="window.dispatchEvent(new CustomEvent('open-window', { detail: 'bernoulli' }))"
            class="flex items-center gap-2 w-full h-full text-left"
          >
            <img
              src="/Case-Studies-Automata/xp-icon/page-bernoulli.ico"
              class="w-5 h-5"
              alt="Notepad"
            />
            <span>Bernoulli Number Generator</span>
            <span class="ml-auto text-[#388e3c] font-bold">&gt;</span>
          </button>
        </li>
        <li
          class="flex items-center gap-2 px-2 py-1 rounded hover:bg-blue-100 cursor-pointer"
        >
          <button
            type="button"
            onclick="window.dispatchEvent(new CustomEvent('open-window', { detail: 'pascal' }))"
            class="flex items-center gap-2 w-full h-full text-left"
          >
            <img
              src="/Case-Studies-Automata/xp-icon/page-bernoulli.ico"
              class="w-5 h-5"
              alt="Notepad"
            />
            <span>Pascal Triangle Generator</span>
            <span class="ml-auto text-[#388e3c] font-bold">&gt;</span>
          </button>
        </li>
      </ul>
    </div>
    <!-- Right: Shortcuts -->
    <div class="w-6/12 bg-gradient-to-b from-[#f8fafc] to-[#eaf6ff]">
      <ul
        class="space-y-1 py-2 px-1 text-blue-950 h-full bg-blue-100 text-base font-display"
      >
        <SocialLink
          icon="github"
          username="JamTheDev"
          url="https://github.com/JamTheDev"
        />
        <SocialLink
          icon="linkedin"
          username="JamTheDev"
          url="https://www.linkedin.com/in/jamthedev2004/"
        />
        <li class="border-t w-9/12 mx-auto border-blue-800/60 my-1"></li>
        <SocialLink
          icon="github"
          username="Mark-Siazon"
          url="https://github.com/mark-siazon"
        />
        <SocialLink
          icon="linkedin"
          username="Mark-Siazon"
          url="https://www.linkedin.com/in/mark-siazon/"
        />
        <li class="border-t w-9/12 mx-auto border-blue-800/60 my-1"></li>
        <SocialLink
          icon="github"
          username="SBaluyut"
          url="https://github.com/Walangligongprog"
        />
      </ul>
    </div>
  </div>
  <div
    class="flex justify-end gap-3 bg-gradient-to-b from-[#245edc] via-[#3a8ada] to-[#245edc] text-white font-bold px-4 py-3"
  >
    <button
      class="flex items-center gap-1 font-normal hover:underline cursor-pointer transition"
    >
      <img
        src="/Case-Studies-Automata/xp-icon/logoff.ico"
        class="w-9 h-9"
        alt="Log Off"
      />
      <span>Log Off</span>
    </button>
    <button
      class="flex items-center gap-1 font-normal hover:underline cursor-pointer transition"
    >
      <img
        src="/Case-Studies-Automata/xp-icon/shutdown.ico"
        class="w-9 h-9"
        alt="Turn Off"
      />
      <span>Repository Link</span>
    </button>
  </div>
</div>

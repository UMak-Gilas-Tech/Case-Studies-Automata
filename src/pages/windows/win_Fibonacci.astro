---
import Window from "../../components/home/Window.astro";
---

<Window
  title="Fibonacci Sequence Generator"
  id="fibonacci-window"
  canMinimize={true}
  canMaximize={true}
  canClose={true}
>
  <!-- Content Area -->
  <div class="p-6 w-full">
    <div class="space-y-4">
      <!-- Input Section -->
      <div class="flex gap-4 items-end">
        <div class="flex-1">
          <label class="block text-sm font-medium text-gray-700 mb-1"
            >Enter number of terms:</label
          >
          <input
            type="number"
            id="fibonacciInput"
            min="1"
            max="100"
            class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            placeholder="Enter a number (1-100)"
          />
        </div>
        <button
          id="generateBtn"
          class="px-4 py-2 bg-gradient-to-b from-[#245edc] to-[#4ea3f7] text-white rounded-md hover:brightness-110 transition-all shadow-md"
        >
          Generate
        </button>
      </div>

      <!-- Result Section -->
      <div class="mt-4">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">Sequence:</h2>
        <div
          id="result"
          class="bg-white p-4 rounded-md border border-gray-200 min-h-[100px] font-mono text-sm"
        >
        </div>
      </div>
    </div>
  </div>

  <script>
    const generateBtn = document.getElementById(
      "generateBtn"
    ) as HTMLButtonElement;
    const fibonacciInput = document.getElementById(
      "fibonacciInput"
    ) as HTMLInputElement;
    const resultDiv = document.getElementById("result") as HTMLDivElement;

    function generateFibonacci(n: number): number[] {
      if (n <= 0) return [];
      if (n === 1) return [0];

      const sequence = [0, 1];
      for (let i = 2; i < n; i++) {
        sequence.push(sequence[i - 1] + sequence[i - 2]);
      }
      return sequence;
    }

    generateBtn?.addEventListener("click", () => {
      if (!fibonacciInput || !resultDiv) return;

      const n = parseInt(fibonacciInput.value || "0");

      if (n < 1 || n > 100) {
        resultDiv.textContent = "Please enter a number between 1 and 100";
        return;
      }

      const sequence = generateFibonacci(n);
      resultDiv.textContent = sequence.join(", ");
    });
  </script>
</Window>
